<h1 class = "text-center mb-3">Friends List</h1>

<table class="table table-bordered table-hover">
  <thead class="table-dark">
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Age</th>
      <th>Email</th>
      <th>Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
      <tr>
        <td><%= friend.first_name %></td>
        <td><%= friend.last_name %></td>
        <td><%= friend.age %></td>
        <td><%= friend.email %></td>
        <td><%= friend.phone %></td>
        <td><%= link_to 'Show', friend, class:"btn btn-info btn-sm" %></td>
        <td><%= link_to 'Edit', edit_friend_path(friend), class:"btn btn-warning btn-sm" %></td>
        <td><%= link_to 'Destroy', friend, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? %>
<div class="text-center">
  <%= link_to 'Add New Friend', new_friend_path, class:"btn btn-success text-center" %>
</div>
<%end%>